{
  "name": "ambrosus-node",
  "description": "",
  "version": "0.0.1",
  "author": "Ambrosus",
  "repository": "git@github.com:ambrosus/ambrosus-node.git",
  "private": false,
  "license": "MPL-2.0-no-copyleft-exception",
  "scripts": {
    "build": "babel ./src -d ./dist --copy-files",
    "start:atlas": "node dist/start_atlas.js",
    "start:hermes": "node dist/start_hermes.js",
    "start:server": "node dist/start_server.js",
    "test": "mocha",
    "migrate": "babel-node ./src/tasks/migrate",
    "dev:clean": "rimraf ./dist",
    "dev:deploy": "source ./dev.env && babel-node src/tasks/dev_deploy.js",
    "dev:prerun:hermes": "source ./dev.env && babel-node src/tasks/dev_prerun_hermes.js",
    "dev:prerun:atlas": "source ./dev.env && babel-node src/tasks/dev_prerun_atlas.js",
    "dev:start:atlas": "source ./dev.env && nodemon --watch src --exec babel-node --inspect src/start_atlas.js",
    "dev:start:hermes": "source ./dev.env && nodemon --watch src --exec babel-node --inspect src/start_hermes.js",
    "dev:start:server": "source ./dev.env && nodemon --watch src --exec babel-node --inspect src/start_server.js",
    "dev:lint": "eslint src test config",
    "dev:docker:db": "docker-compose up -d db",
    "dev:docker:parity": "docker-compose up -d parity"
  },
  "engines": {
    "node": ">=9.0",
    "yarn": ">=1.3.2 <2.0.0"
  },
  "dependencies": {
    "@sentry/node": "^4.3.0",
    "ajv": "^6.4.0",
    "ambrosus-node-contracts": "0.0.18",
    "base64url": "^2.0.0",
    "body-parser": "^1.18.2",
    "command-line-args": "^5.0.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "mongodb": "^3.0.2",
    "morgan": "^1.9.0",
    "pkginfo": "^0.4.1",
    "prom-client": "^11.1.1",
    "web3": "1.0.0-beta.34",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^3.0.0",
    "chai-string": "^1.4.0",
    "eslint": "^4.16.0",
    "eslint-plugin-header": "^1.2.0",
    "eslint-plugin-import": "^2.8.0",
    "ganache-core": "^2.1.0",
    "mocha": "^5.0.0",
    "node-mocks-http": "^1.6.6",
    "nodemon": "^1.14.12",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "sinon": "^6.1.4",
    "sinon-chai": "^3.2.0"
  }
}
