{
  "name": "ambrosus-node",
  "description": "",
  "version": "1.1.16",
  "author": "Ambrosus",
  "repository": "git@github.com:ambrosus/ambrosus-node.git",
  "private": false,
  "license": "MPL-2.0-no-copyleft-exception",
  "scripts": {
    "build": "tsc",
    "start:atlas": "node dist/start_atlas.js",
    "start:hermes": "node dist/start_hermes.js",
    "start:server": "node dist/start_server.js",
    "test": "TS_NODE_TRANSPILE_ONLY=true mocha --config=./test/mocharc.json",
    "migrate": "ts-node ./src/tasks/migrate",
    "dev:migrate": "source ./dev.env && ts-node ./src/tasks/migrate",
    "dev:clean": "rimraf ./dist",
    "dev:deploy": "source ./dev.env && ts-node src/tasks/dev_deploy.js",
    "dev:prerun:hermes": "source ./dev.env && ts-node src/tasks/dev_prerun_hermes.js",
    "dev:prerun:atlas": "source ./dev.env && ts-node src/tasks/dev_prerun_atlas.js",
    "dev:start:atlas": "source ./dev.env && nodemon --watch src --exec ts-node src/start_atlas.js",
    "dev:start:hermes": "source ./dev.env && nodemon --watch src --exec ts-node src/start_hermes.js",
    "dev:start:server": "source ./dev.env && nodemon --watch src --exec ts-node src/start_server.js",
    "dev:lint": "eslint src test",
    "dev:docker:db": "docker-compose up -d db",
    "dev:docker:parity": "docker-compose up -d parity",
    "dev:docker:hermes_server": "docker-compose up -d hermes_server",
    "getToken": "node src/getToken.js"
  },
  "engines": {
    "node": ">=14.0",
    "yarn": ">=1.3.2 <2.0.0"
  },
  "dependencies": {
    "@sentry/node": "^6.7.1",
    "ajv": "^8.6.0",
    "ambrosus-node-contracts": "^0.0.83",
    "base64url": "^3.0.1",
    "bn.js": "^5.2.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "diskusage": "^1.1.3",
    "express": "^4.17.1",
    "mongodb": "^3.6.9",
    "morgan": "^1.10.0",
    "pkginfo": "^0.4.1",
    "prom-client": "^13.1.0",
    "stream-json": "^1.7.1",
    "web3": "^1.3.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "chai-string": "^1.5.0",
    "eslint": "^7.28.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.23.4",
    "ganache-core": "^2.13.2",
    "mitm": "^1.7.2",
    "mocha": "^9.0.0",
    "nock": "^13.1.0",
    "node-mocks-http": "^1.10.1",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
}
