{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "rootDir": "src"
  },
  "include": [
    "./src/**/*"
  ]
}
