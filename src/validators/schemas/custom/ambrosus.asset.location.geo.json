{
  "title": "ambrosus.asset.location.geo",
  "description": "Location of an asset expressed with geographical coordinates",
  "type": "object",
  "properties": {
    "type": {
      "description": "Event entry type",
      "type": "string",
      "const": "ambrosus.asset.location.geo"
    },
    "geoJson": {
      "description": "A geographical coordinate (point in GeoJSON formula)",
      "type": "object",
      "properties" : {
        "type": {
          "type": "string",
          "const": "Point"
        },
        "coordinates": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "items": [{
            "type": "number",
            "minimum": -180,
            "maximum": 180
          },
          {
            "type": "number",
            "minimum": -90,
            "maximum": 90
          }
          ],
          "additionalItems": false  
        }
      },
      "required": [
        "type", "coordinates"
      ],
      "additionalItems": false  
    }
  },
  "required": [
    "type",
    "geoJson"
  ],
  "additionalItems": false  
}

